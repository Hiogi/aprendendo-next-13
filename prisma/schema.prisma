// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int    @id @default(autoincrement())
  name       String
  cpf        String @unique
  password   String
  saldoConta Decimal
  transferenciasOrigem Transferencia[] @relation("contaOrigem")
  transferenciasDestino Transferencia[] @relation("contaDestino")
}

model Transferencia {
  id              Int    @id @default(autoincrement())
  valor           Decimal
  contaOrigemId   Int 
  contaDestinoId  Int
  contaOrigem     User @relation("contaOrigem", fields: [contaDestinoId], references: [id])
  contaDestino    User @relation("contaDestino", fields: [contaOrigemId], references: [id])
}

