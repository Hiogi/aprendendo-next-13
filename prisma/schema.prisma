// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Cliente {
  id     Int     @id @default(autoincrement())
  cpf    String  @unique
  name   String
  contas Conta[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("Clientes")
}

model User {
  id    Int    @id @default(autoincrement())
  cpf   String @unique
  name  String
  senha String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("Users")
}

model Conta {
  id          Int   @id @default(autoincrement())
  numeroConta Int   @unique
  tipoContaId Int
  saldoConta  Float
  clienteId   Int

  tipoConta TipoConta   @relation(fields: [tipoContaId], references: [id])
  client    Cliente     @relation(fields: [clienteId], references: [id])
  transacao Transacao[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("Contas")
}

model Transacao {
  id             Int     @id @default(autoincrement())
  contaId        Int
  conta          Conta   @relation(fields: [contaId], references: [id])
  contaDestinoId String?
  valor          Float
  tipoTransacao  String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("Transacoes")
}

model TipoConta {
  id        Int    @id @default(autoincrement())
  descricao String

  Conta Conta[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

