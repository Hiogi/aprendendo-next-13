// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Cliente {
  id              Int    @id @default(autoincrement())
  cpf             String @unique
  name            String
  contas          Contas[]
}

model Contas {
  id              Int @id @default(autoincrement())
  idCliente       Int
  contaClienteId  Cliente @relation(fields: [idCliente], references: [id])
  numeroConta     String
  tipo            TipoConta
  
}

model transacao {
  idTransacao    Int @id @default(autoincrement())
  data           DateTime
  contasId       Contas @relation(fields: [data], references: [id])
}

enum TipoConta {
  CORRENTE 
  POUPANCA

}

